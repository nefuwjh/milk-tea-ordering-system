      </scroll-view>

    </view>


    <view class="function-window">
      <view class="specialCoupon" style="width: 95%;height:200rpx;">
        <navigator class="specialCoupon-item" url="{{specialCouponPath}}" open-type="switchTab">
          <image class="specialCoupon-item-image" style="width:100%;height: 200rpx;" src="../../components/imgs/specialCoupon.jpg" />
        </navigator>
      </view>
      <view class="discount" >
        <navigator class="discount-item"   url="{{discountPath}}" open-type="switchTab">
          <image class="discount-item-image" src="../../components/imgs/discount-item-image1.jpg"  />
        </navigator>
        <navigator class="discount-item"   url="{{distcountPath}}" open-type="switchTab">
          <image class="discount-item-image" src="../../components/imgs/discount-item-image2.jpg"  />
        </navigator>
      </view>
      <view class="functions" >
        <navigator url="{{functionPath1}}" open-type="switchTab" class="function-item" >
          <image class="function-item-image"  src="../../components/imgs/function1.jpg" />
        </navigator>

        <navigator url="{{functionPath2}}" open-type="switchTab" class="function-item" >
          <image class="function-item-image"  src="../../components/imgs/function2.jpg" />
