        <navigator url="{{functionPath3}}" open-type="switchTab" class="function-item" >
          <image class="function-item-image"  src="../../components/imgs/function4.jpg" />
        </navigator>

        <navigator url="{{functionPath4}}" open-type="switchTab" class="function-item" >
